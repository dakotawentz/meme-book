   <div class="card columns is-centered" id="profile-template">
      <div class="card-content">
        <div class="media">
          <div class="media-left">
            <!-- <figure class="image is-48x48">
              <img
                src="https://bulma.io/images/placeholders/96x96.png"
                alt="Placeholder image"
              />
            </figure> -->
          </div>
          <div class="media-content">
            <p class="title is-4">{{first_name}}</p>
            <p class="subtitle is-6">{{email}}</p>
          </div>
        </div>

        <div class="content">
          <p>Bio: {{bio}}</p>
          <br />
          {{!-- <time datetime="2016-1-1">11:09 PM - 1 Jan 2016</time> --}}
        </div>
        
      </div>
      <div class="card-content">
        <div class="content">
          <h2 id="memeName">{{first_name}}'s meme</h2>
        </div>
      </div>

      <div class="card-content">
        {{#if memePosts.length}} 

        {{#each memePosts as |memePost|}} 
        {{> profilePost memePost}}
        <br />
        {{/each}} 
        
        {{/if}}
      </div>
    </div>
    {{#if (is_my_page user.id userId)}}
    <div class="container">
      <div class="card columns is-half">
        <a href="/create"
          ><button class="button is-success">Create a Post</button></a
        >
      </div>
      {{else}}

      <div class="card columns is-half">
        <p>No posts created</p>
      </div>
    </div>
    {{/if}}

    <script src="/js/profile.js"></script>
 
