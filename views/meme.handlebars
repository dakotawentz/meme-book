  <div class="container">
      <div class="notification ">
        <div class="card">
          <div class="card-header">
            <h3>{{meme.image}}</h3>
            <p>Posted by {{user.first_name}} on {{format_date date_created}}</p>
            <p>{{caption}}</p>
            <div class="field is-grouped is-grouped-centered">
                <p class="control">
                  <button class="button is-success is-small" id="edit-btn">Edit</button>
                </p>
                <p class="control">
                    <button class="button is-success is-small" id="delete-btn">Delete</button>
                  </p>
              </div>
          </div>          
      </div>

          <div class="card-content">
            <h3>Comments</h3>
            {{ #each comments as |comment| }}
            <div>
                <p>{{comment.comment_body}} by {{comment.user.name}} on {{format_date comment.date_created}}</p>
                  {{> comment-form}}
            </div>
            {{/each}}
          </div>
        </div>       
      </div>
    </div>
    
    <script src="/js/newComment.js"></script>
    <script src="/js/deletePost.js"></script>
    <script src="/js/editPost.js"></script>

