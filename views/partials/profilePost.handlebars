<div class="card columns is-centered" id="profile-template">
      {{!-- <div class="card-image">
        <figure class="image is-128x128">
          <img src="{{ image }}" alt="Profile Picture" />
        </figure>
      </div> --}}
      <div class="card-content">
        <div class="media">          
          <div class="media-content">
            <a href="/meme/{{id}}">
            <p class="subtitle is-6">Post by {{user.first_name}} on {{format_date date_created}}</p>
            <p class="title 4">{{image}}{{caption}}</p>
            </a>
          </div>
        </div>   
        
          <div class="field is-grouped is-grouped-centered">
            <p class="control">
              <button class="button is-success is-small" type="submit" id="edit-btn" data-id="{{ id }}">Edit</button>
            </p>
            <p class="control">
                <button class="button is-success is-small" type="submit" id="delete-btn" data-id="{{ id }}">Delete</button>
              </p>
              <p class="control">
                <button class="button is-success is-small" type="submit" id="comment-btn" data-id="{{ id }}">Comment</button>
              </p>
          </div>  
        </div>
      </div>
</div>


 
