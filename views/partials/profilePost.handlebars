
    
    <div class="card columns is-centered" id="profile-template">
      <div class="card-image">
        <figure class="image is-128x128">
          <img src="{{profilePicture}}" alt="Profile Picture" />
        </figure>
      </div>
      <div class="card-content">
        <div class="media">          
          <div class="media-content">
            <h2><a href="/post/{{id}}">{{title}}</a></h2>
            <p class="title is-4">Posted by {{user.first_name}} on {{format_date date_created}}</p>
            <p class="subtitle is-6">{{description}}</p>
          </div>
        </div>       
        
          <div class="field is-grouped is-grouped-centered">
            <p class="control">
              <button class="button is-success" id="edit-btn" data-id="{{ id }}">Edit</button>
            </p>
            <p class="control">
                <button class="button is-success" id="delete-btn" data-id="{{ id }}">Delete</button>
              </p>
          </div>
       
        </div>
      </div>
    </div>

    <script src="/js/profile.js"></script>
  </body>
</html>
